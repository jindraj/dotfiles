set blink-matching-paren on
set colored-stats on
set completion-prefix-display-length 10
set echo-control-characters off
set skip-completed-text on
"\e,": menu-complete
"\C-x\C-p": dabbrev-expand					# complete word (used before)
"\C-x\C-i": dynamic-complete-history
$if bash
  Space: magic-space
  "\C-e\C-d": "\e\C-]|\C-f\C-k"					# delete to last pipe
  "\C-x\C-w": "\C-awhile :;do \C-e\C-e;sleep 60;done"		# Wrap current line in while with 60s delay
  "\C-e\C-w": unix-filename-rubout				# kill backward, stop by / and space
  "\e\C-b": "\e\C-]/"						# jump backward to /
  "\e\C-f": "\C-]/"						# jump forward to /
$endif
$if mysql
  "\C-e\C-p": "SHOW PROCESSLIST;\C-j"				# show processlist
  "\C-e\C-f": "SHOW FULL PROCESSLIST;\C-j"			# show processlist
  "\C-e\C-s": "SHOW SLAVE STATUS\\G\C-j"			# show mysql slave status
  "\C-e\C-m": "SHOW MASTER STATUS;\C-j"				# show mysql master status
  "\C-e\C-h": "SHOW SLAVE HOSTS;\C-j"				# show connected slave hosts
$endif
$if psql
  "\C-e\C-p": "SELECT * FROM pg_stat_activity;\C-j"		# show processlist
$endif

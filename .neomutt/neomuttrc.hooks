# -*-muttrc-*- 
message-hook .                                                 "unalternative_order *; alternative_order text/plain text/enriched text/html" # any message
message-hook '~b Hiring\ update '                              "unalternative_order *; alternative_order text/html text/enriched text/plain" # hiring update
message-hook '~s Secret\ message'                              "unalternative_order *; alternative_order text/html text/enriched text/plain" # from ldaptools encrypt
message-hook '~f "PLACEHOLDER_HOOKS1"' "unalternative_order *; alternative_order text/html text_enriched text/plain" # freshservice sucks

